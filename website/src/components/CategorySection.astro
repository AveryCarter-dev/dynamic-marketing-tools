---
import type { Category } from '../data/tools';
import ToolCard from './ToolCard.astro';

interface Props {
  category: Category;
}

const { category } = Astro.props;
---

<section class="category-section" id={category.id}>
  <h2 class="category-title">
    <span class="category-emoji">{category.emoji}</span>
    <span class="category-name">{category.name}</span>
  </h2>
  <p class="category-description">{category.description}</p>
  <div class="tools-list">
    {category.tools.map((tool) => (
      <ToolCard tool={tool} />
    ))}
  </div>
</section>

<style>
  .category-section {
    margin-bottom: 3rem;
  }

  .category-title {
    margin: 0 0 0.75rem 0;
    font-size: 1.75rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--heading-color);
  }

  .category-emoji {
    font-size: 1.5em;
  }

  .category-name {
    flex: 1;
  }

  .category-description {
    margin: 0 0 1.5rem 0;
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.6;
  }

  .tools-list {
    margin-left: 0;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .category-section {
      margin-bottom: 2.5rem;
    }

    .category-title {
      font-size: 1.6rem;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .category-section {
      margin-bottom: 2rem;
    }

    .category-title {
      font-size: 1.5rem;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .category-emoji {
      font-size: 1.3em;
    }

    .category-description {
      font-size: 0.95rem;
      margin-bottom: 1.25rem;
    }
  }

  /* Small mobile */
  @media (max-width: 480px) {
    .category-section {
      margin-bottom: 1.75rem;
    }

    .category-title {
      font-size: 1.35rem;
    }

    .category-description {
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }
  }
</style>

